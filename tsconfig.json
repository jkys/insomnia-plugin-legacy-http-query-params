{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es6"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "compileOnSave": true,
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules"]
}